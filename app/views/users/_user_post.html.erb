
        <!-- ************************ TEXT POST ************************ -->
        <%= simple_form_for @feed_item do |f| %>
          <div id="textpost" style=display:none >
            <%= f.text_area :tl_text, label: "512 character limit", :rows => 6, :cols => 30 %>
            <%= f.submit "Submit" %>
          </div>
          <input name="text" id="messagetick2" type="checkbox" value="yes" />Text &nbsp;
        <% end %>
        <!-- ************************ LINK POST ************************ -->
        <%= simple_form_for @feed_item do |f| %>
          <div id="linkpost" style=display:none >
            <%= f.input :tl_link, label: "Please enter link here" %>
            <%= f.text_area :tl_text, :rows => 6, :cols => 30 %>
            <%= f.submit "Submit" %>
          </div>
          <input name="link" id="messagetick2" type="checkbox" value="yes" />Link &nbsp;
        <% end %>
        <!-- ************************ IMAGE POST ************************ -->
        <%= simple_form_for @feed_item do |f| %>
          <div id="imagepost" style=display:none >
            <%= f.file_field :tl_image, :label => 'Please enter link here' %>
            <%= f.text_area :tl_text, :rows => 6, :cols => 30 %>
            <%= f.submit "Submit" %>
          </div>
          <input name="image" id="messagetick2" type="checkbox" value="yes" />Image &nbsp;
        <% end %>