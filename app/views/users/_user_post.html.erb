<div id="input-type-toggles">
    <div class="radio-perk">
      <div class="drawer-link">
        <div class="link-of-drawer">   
          <a href="#text-post" class="perkdrop" id="drawer-text-post" name="text">
          <label for="drawer-text-post">Text Post</label>
        </div>
      </div>
    </div><!-- end of .radio-perk -->

    <div class="radio-perk alt">
      <div class="drawer-link">
        <div class="link-of-drawer"> 
          <a href="#" class="perkdrop" id="drawer-link-post" name="link">
          <label for="drawer-link-post">Link Post</label>
        </div>
      </div>
    </div><!-- end of .radio-perk -->

    <div class="radio-perk">
       <div class="drawer-link">
          <div class="link-of-drawer"> 
            <a href="#" class="perkdrop" id="drawer-image-post" name="image">
            <label for="drawer-image-post">Image Post</label>
          </div>
      </div><!-- end of #drawer-image-post -->
    </div><!-- end of .radio-perk -->
</div><!-- end of #input-type-toggles -->

<div id="post-input-area">
  <div id="text-post-input" class="dropdown">
     <%= simple_form_for @tl_text, remote: true do |f| %>
      <%= f.text_area :content, label: "512 character limit", placeholder: "512 character limit", input_html: { class: 'special'} %>
    </br>
      <%= f.submit "Submit" %>
    <% end %>
  </div>
  <div id="link-post-input" class="dropdown">
     <%= simple_form_for @tl_link, remote: true do |f| %>
      <%= f.input :link, placeholder: "Please enter link here" %>
      <%= f.text_area :content, :rows => 6, :cols => 30 %>
      <%= f.submit "Submit" %>
  <% end %>
  </div>
  <div id="image-post-input" class="dropdown">
      <%= simple_form_for @tl_image, :html => { :multipart => true } do |f| %>
      <%= f.label :photo %>
      <%= f.file_field :photo %>
      <%= f.submit "Submit" %>
    <% end %>
  </div>
</div>

