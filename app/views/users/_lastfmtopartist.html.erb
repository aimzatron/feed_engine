<a href="<%= feed.url %>", target="_blank">
  <div class="item lastfm-top-track-container">   
    <div class="lastfm-top-track-inner-box">
      <%= image_tag feed.image_url %>
      <div class="lastfm-top-track-upper-info-box">
        <div class="upper-info-transparent">
          <div class="icon-type">
            <%= image_tag('small_mike.png')%>
          </div>
          <div class="rank-box">
          </div>
        </div>
      </div>
      <div class="lastfm-top-track-info-box">
        <div class="top-track-transparent"></div>
        <div class="top-track-details">
          <h1><%= feed.name %></h1>
          <div class="track-bottom-info">
            <p>Playcount: <%= feed.playcount %></p>
          </div>
        </div>
      </div>
    </div><!-- end of .text-post-box  -->
  </div><!--end of .item text-post -->
</a>
<!-- jQuery for image mousenter reveal details -->

<script>
  $(".lastfm-top-track-inner-box").on('mouseover', function(){
    $(this).find('.lastfm-top-track-info-box').slideDown(400);
    $(this).find('.lastfm-top-track-upper-info-box').slideDown(400);
  }).on('mouseleave', function(){
    $(this).find('.lastfm-top-track-info-box').slideUp(200);
    $(this).find('.lastfm-top-track-upper-info-box').slideUp(400)
  });
</script>


 